@page "/health"

@inject HttpClient httpClient 

@using Health.Shared 

<div class="contaier">
    
    <div class="cards">
        <div class="card" @onclick = "Post">@HealthStatus_[0]</div>
        <div class="card">@HealthStatus_[1]</div>
        <div class="card">@HealthStatus_[2]</div>
        <div class="card">@HealthStatus_[3]</div>
        <div class="card">@HealthStatus_[4]</div>
    </div>
</div>

<style>
    body{
        margin:0;
        padding:0;
        
    }



    .contaier {
        background-color:lightblue;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .cards{
        width:80%;
        height:100%;
        display:flex;
        justify-content:center;
        align-items:center;
    }
    .card{
        width:20%;
        height:20%;
        background-color:darkblue;
        margin-left:20px;

    }

</style>

@code {

    Status status = new Status();

    string[] HealthStatus_ = new string[5];



    private async Task Post()
    {
        HealthStatus_[0] = "No symptoms";
        HealthStatus_[1] = "No symptoms";
        HealthStatus_[2] = "No symptoms";
        HealthStatus_[3] = "No symptoms";
        HealthStatus_[4] = "No symptoms"; 



        await httpClient.PostAsJsonAsync("/api/Status", status);
    }

}
